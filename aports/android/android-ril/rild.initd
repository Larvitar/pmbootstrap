depend() {
}

start() {
   ebegin "Starting Radio Interface Layer"
   start-stop-daemon --start --quiet --exec /usr/sbin/rild
   eend $?
}

stop() {
   ebegin "Stopping Radio Interface Layer"
   start-stop-daemon --stop --quiet --exec /usr/sbin/rild
   eend $?
}
